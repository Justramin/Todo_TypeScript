<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container my-4">
    <h1 class="text-center">Todo Application</h1>
    <form class="mb-3" action="/add" method="POST">
      <input type="text" name="title" class="form-control" placeholder="Task Title" required />
      <input type="date" name="deadline" class="form-control mt-2" />
      <button class="btn btn-primary mt-2">Add Task</button>
    </form>

    <ul class="list-group">
      <% tasks.forEach(task => { %>
        <li class="list-group-item d-flex justify-content-between">
          <span><%= task.title %> (<%= task.completed ? "Completed" : "Pending" %>)</span>
          <div>
            <form action="/complete/<%= task.id %>" method="POST" class="d-inline">
              <button class="btn btn-success btn-sm" <%= task.completed ? "disabled" : "" %>>Complete</button>
            </form>
            <form action="/delete/<%= task.id %>" method="POST" class="d-inline">
              <button class="btn btn-danger btn-sm">Delete</button>
            </form>
          </div>
        </li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
